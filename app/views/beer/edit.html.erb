      <input type="text" id="pint_price" name="pint_price" value="<%= @beer.pint_price%>"><br>
      <label for="beer_name">Beer Name:</label><br>
      <input type="text" id="beer_name" name="beer_name" value="<%= @beer.name%>"><br>
      <input type="submit" value="Submit">
    </form><br>
