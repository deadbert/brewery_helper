    <script src="" async defer></script>
    <div style='text-align: center'><h1>Add New Beer to <%= @brewery.name %></h1></div>
    <%= form_with url: "/breweries/#{@brewery.id}/beers?brewery_id=#{@brewery.id}", method: :post, data: { turbo: false } do |form| %>
      <%= form.label :type%><br>
      <%= form.text_field :type %><br>
      <%= form.label :on_tap %><br>
      <%= form.text_field :on_tap %><br>
      <%= form.label :pint_price %><br>
      <%= form.text_field :pint_price %><br>
      <%= form.label :beer_name %><br>
      <%= form.text_field :beer_name %><br>
      <%= form.submit "Submit" %><br>
    <% end %>
